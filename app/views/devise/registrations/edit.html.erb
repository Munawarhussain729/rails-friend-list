<h2 class="my-3">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.email_field :email, class:"form-control",autocomplete: "email", autofocus: true, placeholder:"Enter your Email"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="my-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class:"form-control mt-2",autocomplete: "password", placeholder:"Password"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="my-3">
    <%= f.password_field :password_confirmation, class:"form-control mt-2",autocomplete: "new-password", placeholder:"Password"%>
  </div>

  <div class="my-3">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
     <%= f.password_field :current_password, class:"form-control mt-2",autocomplete: "current-password", placeholder:"Password"%>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-dark mb-3" %>
  </div>
<% end %>

<div class="d-flex">
  <div class="btn btn-secondary"> <%= button_to "Cancel my account",registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-secondary m-0" %></div>
  <div class="btn btn-secondary mx-3"> <%= link_to "Back", :back, class:"btn btn-secondary m-0" %></div>
</div>
