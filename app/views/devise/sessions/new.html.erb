<h2 class="my-3">Log in</h2>

<div class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="mb-3">
    <%= f.email_field :email, class:"form-control",autocomplete: "email", placeholder:"First Name"%>
  </div>
  
  <div class="mb-3">
      <%= f.password_field :password, class:"form-control",autocomplete: "current-password", placeholder:"Password"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "Log in", class:"btn btn-secondary" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
